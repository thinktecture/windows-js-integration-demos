<Window x:Class="LongPolling.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LongPolling Sample" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="213*"/>
        </Grid.RowDefinitions>
        <Menu Name="mainMenu" Height="22" Margin="0,0,0,0" VerticalAlignment="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" IsCheckable="true"/>
                <MenuItem Header="_Close" IsCheckable="true"/>
                <MenuItem Header="_Save" IsCheckable="true"/>
                <Separator/>
                <MenuItem Header="Search">
                    <MenuItem Header="Simple" IsCheckable="true"/>
                    <MenuItem Header="Advanced" IsCheckable="true"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Action">
                <MenuItem Header="_WPF Dialog" Click="wpf_Click"/>
                <Separator/>
                <MenuItem Header="Browser Dialog" Click="browser_Click"/>
            </MenuItem>
            <MenuItem Header="_Help">
            </MenuItem>
        </Menu>
        <Button Content="Start WebAPI Host" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="130" Click="Button_Click"/>
        <Label Name="label1" Content="" HorizontalAlignment="Left" Margin="145,7,0,0" Grid.Row="1" VerticalAlignment="Top" RenderTransformOrigin="-1.737,0.462" Width="271"/>

    </Grid>
</Window>
